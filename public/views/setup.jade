doctype html(lang='en')
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
  meta(name='description', content='')
  meta(name='author', content='')
  link(rel='icon', href='favicon.ico')
  title Samurai Sales Interview
  // Bootstrap core CSS
  link(href='bower_components/bootstrap/dist/css/bootstrap.css', rel='stylesheet')

  link(href='bower_components/angular-motion/dist/angular-motion.min.css', rel='stylesheet')

  // Custom styles for this template
  link(href='css/style.css', rel='stylesheet')

  // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
  //if lt IE 9
    script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
    |
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
body(ng-app='setupApp' ng-controller='setupCtrl' style='background:#34495e; color: white; font-family: sans-serif; font-size: 20px;')
  .container
    .row(style='margin-top: 40px;')
      .col-md-6
        form.form-signin(ng-submit='submit()')
          h2.form-signin-heading Enter your details
          label.sr-only(for='inputName') Name
          input#inputEmail.form-control(type='text', placeholder='Name', name='name', required='', autofocus='' ng-model='data.name')
          label.sr-only(for='inputEmail') Email
          input#inputPassword.form-control(type='email', placeholder='Email', name='email', required='' ng-model='data.email')
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Submit
      .col-md-6(style='margin-top: 40px;')
        p Please input your details so we can contact you after the interview process.
  // /container

  script(src='bower_components/jquery/dist/jquery.min.js')
  script(src='bower_components/bootstrap/dist/js/bootstrap.min.js')
  script(src='bower_components/angular/angular.min.js')
  script(src='bower_components/angular-sanitize/angular-sanitize.min.js')
  script(src='bower_components/angular-animate/angular-animate.min.js')
  script(src='bower_components/angular-strap/dist/angular-strap.min.js')
  script(src='bower_components/angular-strap/dist/angular-strap.tpl.min.js')
  script(src='js/setup.js')